{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "plugins": ["react", "react-hooks", "tailwindcss", "prettier"],
  "rules": {
    "prettier/prettier": "warn", // Mostra erros de formatação como warnings
    "react/prop-types": "off", // Não exigir PropTypes (TypeScript geralmente torna isso redundante)
    "react/react-in-jsx-scope": "off", // Não precisa importar React em versões mais recentes
    "tailwindcss/classnames-order": "warn", // Ordena as classes Tailwind
    "tailwindcss/no-custom-classname": "off" // Permite usar classes customizadas (se necessário)
  },
  "settings": {
    "react": {
      "version": "detect" // Detecta a versão do React instalada
    }
  }
}
